{
  "expo": {
    "name": "STRAT Wallet",
    "slug": "strat-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.strat.wallet",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for transactions.",
        "NSFaceIDUsageDescription": "This app uses Face ID to secure your wallet."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.strat.wallet",
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow STRAT Wallet to use Face ID."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow STRAT Wallet to access your camera for QR scanning."
        }
      ]
    ]
  }
}
